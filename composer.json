{
  "name": "affiliate/tracking-panel",
  "description": "Commercial-grade affiliate marketing tracking platform",
  "type": "project",
  "require": {
    "php": ">=8.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "suggest": {
    "predis/predis": "For Redis support",
    "geoip2/geoip2": "For GeoIP functionality",
    "monolog/monolog": "For advanced logging"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "src/Helpers/functions.php"
    ]
  },
  "scripts": {
    "serve": "php -S localhost:8000 -t public/",
    "fraud-worker": "php workers/fraud_worker.php",
    "stats-worker": "php workers/stats_worker.php",
    "archive-worker": "php workers/archive_worker.php",
    "test": "phpunit"
  }
}
